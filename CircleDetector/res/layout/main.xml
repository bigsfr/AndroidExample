<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:id="@+id/desc" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textSize="15sp"
		android:text="@string/desc" />
	<TextView android:id="@+id/result" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textSize="30sp"
		android:text="" />
	<com.polysfactory.circledetector.MapView
		android:id="@+id/mapview" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:focusable="true" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginTop="10dip"
		android:gravity="center">
		<Button android:id="@+id/pause" android:text="@string/pause"
			android:onClick="pause" android:layout_width="150dip"
			android:layout_height="wrap_content" />
		<Button android:id="@+id/unpause" android:text="@string/resume"
			android:onClick="resume" android:layout_width="150dip"
			android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>
